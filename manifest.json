{
  "manifest_version": 3,
  "name": "Favicon Recolor",
  "version": "1.2",
  "description": "Recolors favicons in a Minimalistic and Elegant style.",
  "permissions": ["storage", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["recolor.js"],
      "run_at": "document_idle"
    }
  ]
}
